{% extends 'base.html.twig' %}


 {% block body %}
 {% if action is defined and action == "add_success" %}
    <div class="row">
        <div class="col m6 offset-m3">
            <div class="card-panel teal lighten-3 center-align">
                Your article has been successfully added !
            </div>
        </div>
    </div>
    
 {% endif %}

    <div class="row">
        {% for article in articles %}
            <div class="col m4">
                <div class="card medium">
                    <div class="card-image waves-effect waves-block waves-light">
                        <img class="activator" src={{ article.picture }}>
                    </div>
                    <div class="card-content">
                        <span class="card-title activator grey-text text-darken-4">{{ article.title }}<i class="material-icons right">more_vert</i></span>
                        <p style="float:left;">{{ article.createdAt|date("d/m/Y") }}</p>
                        <p style="float:right;">{{ article.category.title }}</p>
                    </div>
                    <div class="card-action">
                        <a href="{{ path("form_edit",{ id: article.id}) }}" class="btn-floating waves-effect waves-light #00bfa5 teal accent-4"><i class="material-icons">edit</i></a>
                        <a href="{{ path("delete_article",{id: article.id}) }}" class="btn-floating waves-effect waves-light #00bfa5 teal accent-4"><i class="material-icons">delete</i></a>
                    </div>
                    <div class="card-reveal">
                        <span class="card-title grey-text text-darken-4">{{ article.title }}<i class="material-icons right">close</i></span>
                        <p>{{ article.content }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <a href="{{path('form_new')}}" class="btn-floating btn-large right waves-effect waves-light #d500f9 purple accent-3"><i class="material-icons">add</i></a>


 {% endblock %}
